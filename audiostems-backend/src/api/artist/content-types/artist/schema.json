{
  "kind": "collectionType",
  "collectionName": "artists",
  "info": {
    "singularName": "artist",
    "pluralName": "artists",
    "displayName": "Artist",
    "description": "Artist profiles for distribution and publishing"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "stageName": {
      "type": "string",
      "required": true
    },
    "artistType": {
      "type": "enumeration",
      "enum": [
        "solo_artist",
        "band_group",
        "dj",
        "duo",
        "orchestra",
        "ensemble",
        "collective"
      ],
      "required": true
    },
    "profilePhoto": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phoneNumber": {
      "type": "string"
    },
    "genre": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::genre.genre",
      "inversedBy": "artists"
    },
    "contractStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "signed",
        "active",
        "expired",
        "renewal",
        "inactive"
      ],
      "default": "pending"
    },
    "dateSigned": {
      "type": "date"
    },
    "socialMediaHandles": {
      "type": "json"
    },
    "manager": {
      "type": "component",
      "component": "artist.manager-info",
      "required": false
    },
    "furtherInformation": {
      "type": "text"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "artist"
    },
    "songs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::song.song",
      "mappedBy": "singers"
    },
    "lyrics": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::lyric.lyric",
      "mappedBy": "writers"
    },
    "stems": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::stem.stem",
      "mappedBy": "artists"
    },
    "projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project",
      "mappedBy": "artist"
    },
    "cover": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "name": {
      "type": "string",
      "required": true
    }
  }
}
